<%= stylesheet_link_tag 'users', media: 'all' %>

<div class="container">
<h2>REGISTRAR</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "custom-input" %>
  </div>

  <div class="field">
    <%= f.label 'Senha' %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "custom-input" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label 'Lembrar senha' %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Registrar", class: "custom-button" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>