<div class="container_main">

  <div class="header">
    <h1>To Do List</h1>
  </div>


  <ul class="scrollable-list">
    <% if @lists.any? %>
      <% @lists.reverse.each do |list| %>
        <li class="list-item">
          <div class="left list-text">
              <%= link_to list.name, list_path(list),class: 'text link' %>
          </div>
          <div class="right">
              <%= link_to image_tag('clip.svg', alt: 'Editar',width: '20', height: '20'), edit_list_path(list),class: "button button_editar" %> |
              <%= link_to image_tag('delete.svg', alt: 'Deletar',width: '20', height: '20'), list_path(list), data: { turbo_method: :delete, turbo_confirm: 'Tem certeza que deseja excluir?' },class: "button button_editar " %>
          </div>
        </li>
      <% end %>
    <% else %>
      <p> A lista estÃ¡ vazia</p>
    <% end %>
  </ul>

  <%= link_to "#{image_tag('pen.svg', alt: 'Inserir Lista',width: '20', height: '20')} Inserir Lista".html_safe, new_list_path,class: "button button_criar link" %>

  <footer>
    <span class="bottom-right-text ">1</span>
  </footer>

</div>