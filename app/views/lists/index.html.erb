<div class="container_main">

  <div class="header">
    <h1>To Do List</h1>
  </div>


  <ul>
    <% if @lists.any? %>
      <% @lists.each do |list| %>
        <li>
          <%= link_to list.name, list_path(list),class: 'text' %>
          <%= link_to image_tag('clip.svg', alt: 'Editar',width: '20', height: '20'), edit_list_path(list),class: "button button_editar" %> |
          <%= link_to image_tag('delete.svg', alt: 'Deletar',width: '20', height: '20'), list_path(list), data: { turbo_method: :delete, turbo_confirm: 'Tem certeza que deseja excluir?' },class: "button button_editar" %>

        </li>
      <% end %>
    <% else %>
      <p> A lista estÃ¡ vazia</p>
    <% end %>
  </ul>

  <%= link_to image_tag('pen.svg', alt: 'Inserir Lista',width: '20', height: '20'), new_list_path,class: "button button_criar" %>

</div>