<h1><%= @list.name %></h1>

<h2>Itens:</h2>
<ul>
  <% @list.items.each do |item| %>
    <li>
      <%= item.title %> - <%= item.completed ? "Concluído" : "Pendente" %>
      <%= link_to 'Remover', list_item_path(@list, item), method: :delete, data: { confirm: "Tem certeza?" } %>
    </li>
  <% end %>
</ul>

<h2>Adicionar Item</h2>
<%= form_with model: [@list, @item], local: true do |form| %>
  <%= form.label :title, "Título" %>
  <%= form.text_field :title %>
  <%= form.submit "Adicionar" %>
<% end %>
