<h1>Editar Lista</h1>

<%= form_with(model: @list, local: true) do |form| %>
  <div>
    <%= form.label :name, "Nome da Lista" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.submit "Atualizar Lista" %>
  </div>
<% end %>

<h2>Tarefas</h2>

<%= render partial: "items/form", locals: { items: @list.items } %>

<%= link_to 'Concluido', lists_path %>

<h2>Adicionar Nova Tarefa</h2>

<%= form_with(model: [@list, Item.new], local: true) do |form| %>
  <div>
    <%= form.label :title, "Nome da Tarefa" %>
    <%= form.text_field :title %>
  </div>
  <div>
    <%= form.submit "Criar Tarefa" %>
  </div>
<% end %>

<%= link_to 'Voltar', lists_path %>
