<%= stylesheet_link_tag 'new', media: 'all' %>

<div class='container_main'>
  <div class="header">
    <h1>Editar Lista</h1>
  </div>

  <%= form_with(model: @list, local: true,html: { onsubmit: "return validateForm(this);" }) do |form| %>
    <div class="form-group">
      <%= form.label :name, "Lista: " ,style: "font-weight: bold; color: #333; font-size: 30px;"%>
      <%= form.text_field :name, class: "text-field" %>

      <%= button_tag(type: 'submit', class: "button") do %>
        <%= image_tag('check.png', alt: 'Atualizar Lista', width: '20', height: '20') %>
        Atualizar
      <% end %>

      <div id="error-message" >
        O nome da lista n√£o pode estar vazio!
      </div>

    </div>
  <% end %>

  <h2 class='header'>TAREFAS</h2>

  <%= render partial: "items/form", locals: { items: @list.items }%>

  <%= link_to "#{image_tag('check.png', alt: 'Concluido', width: '20', height: '20')} Concluido".html_safe, lists_path, class: "button link" %>
  <%= link_to "#{image_tag('voltar.png', alt: 'Voltar', width: '20', height: '20')} Voltar".html_safe, lists_path, class: "button link" %>

  <footer>
    <span class="bottom-right-text ">3</span>
  </footer>
</div>

<script>
  function validateForm(form) {
    const nameInput = form.querySelector("input[name='list[name]']");
    const errorMessage = document.getElementById("error-message");
    const trimmedValue = nameInput.value.trim();

    if (trimmedValue === "") {
      errorMessage.style.display = "block"; 
       setTimeout(() => {
        errorMessage.style.display = "none"; 
      }, 1000);
      return false;

    } else {
      errorMessage.style.display = "none"; 
    }
    
    return true;
  }
</script>
