<%= stylesheet_link_tag 'new', media: 'all' %>
<div class="container_main">
  <div class="header">
    <h1>Nova Lista</h1>
  </div>

    <%= form_with model: @list, local: true do |form| %>
        <div class="form-group">
          <%= form.label :name, "Nome da Lista:" %>
        </div>

        <div class="form-group">
          <%= form.text_field :name, class: "text-field" %>
        </div>

        <div class="form-group">
          <%= form.submit "Criar Lista", class: "submit-button" %>
        </div>

        <div class="form-group">
          <%= link_to 'Voltar', lists_path, class: "back-link" %>
        </div>
    <% end %>
</div>
